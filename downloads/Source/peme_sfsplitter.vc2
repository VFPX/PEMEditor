DEFINE CLASS peme_sfsplitterh AS peme_sfsplitter OF "peme_sfsplitter.vcx" 
 	*< CLASSDATA: Baseclass="control" Timestamp="" Scale="Pixels" Uniqueid="" />

	*<PropValue>
		MousePointer = 9
		Name = "peme_sfsplitterh"
		nanchor = 13
