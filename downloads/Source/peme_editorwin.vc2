	ENDPROC

	PROCEDURE paste
		Lparameters lcClipText
		
		Local lcOld
		If Pcount() = 0
			_EdPaste (This.nHandle)
		Else
			lcOld = _Cliptext
			_Cliptext = lcClipText
			_EdPaste (This.nHandle)
			_Cliptext = lcOld
		Endif
		
	ENDPROC

	PROCEDURE resizewindow
