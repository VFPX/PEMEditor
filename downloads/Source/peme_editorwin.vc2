	ENDPROC

	PROCEDURE select
		Lparameters lnSelStart, lnSelEnd
		_EdSelect (This.nHandle, lnSelStart, IIF('N' = Vartype(lnSelEnd), lnSelEnd, lnSelStart)) 
		
	ENDPROC

	PROCEDURE selectwindow
		Lparameters lnHandle
		
		Local llSuccess 
		Try
			_WSelect (lnHandle)
			llSuccess = .T.
		Catch
			llSuccess = .F.
		Endtry
		
	ENDPROC

