		With This
			.GetPutSetting ('Top', 		'Top', 		.Top + 1, 	lbPutFlag)
			.GetPutSetting ('Left', 	'Left', 	.Left + 1, 	lbPutFlag)
			.GetPutSetting ('Height', 	'Height', 	.Height + 1, lbPutFlag)
