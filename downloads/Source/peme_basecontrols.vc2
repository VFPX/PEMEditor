		lcFileDisplayName = Thisform.GetRelativePath (This.DiskFileName(lcFileName), Evl (lcFolder, Curdir()))
		lcFName = Justfname (lcFileDisplayName)
		lcQuote = Iif (" " $ lcFName, ['], '')
		If lcFName == lcFileDisplayName
